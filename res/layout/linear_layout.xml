<?xml version="1.0" encoding="utf-8"?>
<!--Linear布局-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="用户名"
                />
        <EditText android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:hint="字符2-10个之间"
                />
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="输入密码"
                />
        <EditText android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:hint="字符2-10个之间"
                  android:password="true"
                />
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="确认密码"
                />
        <EditText android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:hint="字符2-10个之间"
                  android:password="true"
                />
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:id="@+id/tvSex"
                  android:text="选择性别"
                />
        <RadioGroup android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/rgSex"
                    android:orientation="horizontal"
                >
            <RadioButton android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="男"
                    />
            <RadioButton android:layout_width="wrap_content" android:layout_height="wrap_content"
                         android:text="女"
                         android:checked="true"
                    />
        </RadioGroup>

    </LinearLayout>

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                   android:id="@+id/rvAddress"
                  android:layout_marginTop="10dp"
                  android:text="所在地"
                />
        <Spinner android:id="@+id/spinCity"
                 android:layout_columnSpan="3"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:entries="@array/citys"

                />
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:layout_marginTop="15dp"
                  android:text="爱好:"
                />
        <GridLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:columnCount="2"
                >
            <Switch android:text="读书"
                    android:textOn="on"
                    android:textOff="off"
                    />
            <Switch android:layout_marginLeft="10dp"
                    android:text="旅游"
                    android:textOn="on"
                    android:textOff="off"
                    />
            <Switch android:text="电玩"
                    android:textOff="off"
                    android:textOn="on"
                    />
            <Switch android:layout_marginLeft="10dp"
                    android:text="游泳"
                    android:textOff="off"
                    android:textOn="on"
                    />
        </GridLayout>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content">
        <View android:layout_width="0dp" android:layout_height="40dp"
              android:layout_weight="1"/>
        <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:id="@+id/btnRegister"
                android:layout_marginTop="10dp"
                android:background="@drawable/btn_bg"
                android:drawableLeft="@drawable/login32x32"
                android:padding="3dp"
                android:text="注册"
                android:textColor="#fff"
                />
        <View android:layout_width="0dp" android:layout_height="40dp"
              android:layout_weight="1"/>
        <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:id="@+id/btnExit"
                android:layout_marginTop="10dp"
                android:background="@drawable/btn_bg"
                android:drawableLeft="@drawable/exit32x32"
                android:text="取消"
                android:padding="3dp"
                android:textColor="#fff"
                />
        <View android:layout_width="0dp" android:layout_height="40dp"
              android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:paddingTop="100dp">

        <Button android:id="@+id/btnLayoutRetrun"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="返回"
                android:textColor="#fff"
                />
    </LinearLayout>

</LinearLayout>
