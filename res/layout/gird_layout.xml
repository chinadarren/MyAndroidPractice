<?xml version="1.0" encoding="utf-8"?>
<!--Gird布局-->
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnCount="5"
            android:orientation="horizontal"
        >
    <TextView android:text="用户名"/>
    <EditText android:layout_columnSpan="4"
              android:layout_gravity="fill_horizontal"
              android:hint="2-10个字符"
            />
    <TextView android:text="输入密码"/>
    <EditText android:layout_columnSpan="4"
              android:layout_gravity="fill_horizontal"
              android:hint="2-10个字符"
              android:password="true"
            />
    <TextView android:text="确认密码"/>
    <EditText android:layout_columnSpan="4"
              android:layout_gravity="fill_horizontal"
              android:hint="2-10个字符"
              android:password="true"
            />
    <TextView android:layout_marginTop="10dp"
              android:text="选择性别"
            />
    <RadioGroup
            android:layout_columnSpan="4"
            android:orientation="horizontal"
            >
        <RadioButton
                android:id="@+id/rdMale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="男"
                android:layout_marginTop="5dp"
                />
        <RadioButton android:id="@+id/rdFemale"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="女"
                     android:layout_marginTop="5dp"
                />
    </RadioGroup>
    <TextView android:layout_marginTop="10dp"
              android:text="所在地"
              android:id="@+id/spinnerText"
            />
    <Spinner android:id="@+id/Spinner01"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_columnSpan="4"
             android:layout_marginTop="10dp"
             android:entries="@array/citys"
            ></Spinner>

    <TextView android:layout_marginTop="10dp"
              android:text="选择爱好"
            />
    <RadioGroup android:layout_columnSpan="4"
                android:orientation="horizontal"
            >
        <CheckBox android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="读书"
                />
        <CheckBox android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="旅游"
                />
        <CheckBox android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="电玩"
                />
        <CheckBox android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="运动"
                />
    </RadioGroup>
    <Button android:text="不不不"
            android:visibility="invisible"/>
    <Button android:background="@drawable/btn_bg"
            android:drawableLeft="@drawable/login32x32"
            android:onClick="onClick"
            android:padding="2dp"
            android:text="注册"
            android:textColor="#fff"
            />
    <Button android:text="不不不"
            android:visibility="invisible"/>
    <Button android:background="@drawable/btn_bg"
            android:drawableLeft="@drawable/exit32x32"
            android:onClick="onClick"
            android:padding="2dp"
            android:text="退出"
            android:textColor="#fff"
            />
    <Button android:text="不"
            android:visibility="invisible"/>

    <Button android:id="@+id/btnGridSginupReturn"
            android:layout_columnSpan="4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="返回"
            android:textColor="#fff"
            />


</GridLayout>